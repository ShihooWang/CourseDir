<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img_dialog_cancel"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:padding="16dp"
            />
        <TextView
            android:layout_weight="1"
            android:id="@+id/input_title"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="增加分类"
            android:textColor="@color/color_text_3"
            android:textSize="@dimen/text_size_4"
            android:textStyle="bold"
            />
        <ImageButton
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img_dialog_submit"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:padding="16dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/title_tis"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="@dimen/text_size_2"
        android:textColor="@color/color_text_4"
        android:text="提示：教练可根据自己的教学体系按部位，器械等分类"
        android:gravity="center"
        android:background="@color/text_color_1"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/color_divider"/>
    <!--<EditText-->
        <!--android:id="@+id/edit_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="60dp"-->
        <!--android:text=""-->
        <!--android:textColor="@color/text_color_3"-->
        <!--android:textSize="@dimen/text_size_4"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:background="@null"-->
        <!--android:textCursorDrawable="@drawable/color_cursor"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:hint="请输入分类名称"-->
        <!--android:textColorHint="@color/color_text_4"-->
        <!--android:paddingLeft="10dp"-->
        <!--/>-->

    <shihoo.wang.coursedir.widget.LengthLimitEditTextView
        app:max_text_length = "20"
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=""
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/text_size_4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="请输入分类名称"
        android:textColorHint="@color/color_text_4"
        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/edit_content_txt"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text=""
        android:textColor="@color/text_color_4"
        android:textSize="@dimen/text_size_3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:gravity="top"
        android:padding="5dp"
        android:lineSpacingMultiplier="1.2"
        android:visibility="gone"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_divider"
        />

</LinearLayout>